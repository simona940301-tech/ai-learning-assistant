{
  "name": "@plms/shared",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "run-p build:types build:js",
    "build:types": "tsc -p tsconfig.build.json",
    "build:js": "tsup index.ts --format esm,cjs --minify --out-dir dist",
    "dev": "tsup index.ts --format cjs,esm --watch",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "zod": "^3.23.8",
    "cross-fetch": "^4.0.0"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "tsup": "^8.5.0",
    "typescript": "^5.3.3"
  }
}
