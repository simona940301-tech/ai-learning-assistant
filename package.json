{
  "name": "plms-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "PLMS - Multi-platform Learning Assistant System",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=web",
    "dev:mobile": "turbo run dev --filter=mobile",
    "dev:shared": "turbo run dev --filter=@plms/shared",
    "build": "turbo run build",
    "build:shared": "turbo run build --filter=@plms/shared",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:subject": "vitest run -t subject",
    "test:all": "vitest run",
    "verify:subject": "node scripts/verify-subject-detection.mjs",
    "verify:solve": "node scripts/verify-solve-system.mjs",
    "verify:all": "npm run verify:subject && npm run verify:solve",
    "verify:deployment": "node scripts/verify-deployment.mjs",
    "clean:port": "./scripts/kill-port-3000.sh",
    "clean:dev": "./scripts/kill-port-3000.sh --clean-next",
    "clean:full": "./scripts/kill-port-3000.sh --full-clean",
    "deploy": "./scripts/auto-deploy.sh"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "prettier": "^3.1.1",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3",
    "vitest": "^1.6.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "dependencies": {
    "@types/dompurify": "^3.2.0",
    "dompurify": "^3.3.0"
  }
}
